@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Worker Profile";
}

@using System.Security.Claims
@model MrFixIt.Models.Worker

<h2>Create</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h4>You do not have a complete worker profile. Please create your worker profile.</h4>
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @required = "true" } )
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @required = "true" } )

        <input type="submit" value="Register" />
    }
}